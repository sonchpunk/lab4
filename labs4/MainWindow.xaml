<Window x:Class="labs4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labs4"
        mc:Ignorable="d"
        Title="Заметки" Height="450" Width="800">
    <Grid>
        <Grid>
            <TextBox x:Name="textBox" TextWrapping="Wrap" AcceptsReturn="True"  Margin="40" VerticalScrollBarVisibility="Auto"/>
            <ComboBox x:Name="comboBoxFontFamily" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="150" SelectionChanged="comboBoxFontFamily_SelectionChanged"/>
            <ComboBox x:Name="comboBoxFontSize" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,10,0,0" Width="100" SelectionChanged="comboBoxFontSize_SelectionChanged"/>
            <ComboBox x:Name="comboBoxColor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,10,0,0" Width="100" SelectionChanged="comboBoxColor_SelectionChanged"/>
        </Grid>
    </Grid>
</Window>
